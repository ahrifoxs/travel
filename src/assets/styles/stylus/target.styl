// 以下是targetHeader页面的样式
.targetHeader
  display: flex
  flex-direction: row
  justify-content flex-start
  box-sizing: border-box
  width: 100%
  height: 60px
  box-shadow 0 0 2px #9499a1
  margin: 0 auto
  position: fixed
  top: 0
  z-index 1
  background: #fff
  .targetLogo
    width: 259px
    height: 60px
    color: #fff
    background: #f44336
    text-align: center
    font-size: 23px
    line-height: 60px
    cursor pointer
  .targetToc
    width: 34px;
    height: 34px;
    cursor pointer
    font-size: 44px
    color: #f44336
    margin: 14px 0 0 12px
    flex: 1
    i
      font-style: italic
  .targetToc:hover
      color: #000000
  .targetLive
    display: flex
    flex-direction: row
    justify-content: center
    box-sizing: border-box
    div
      padding: 0 0 0 40px
      line-height: 60px
      text-align: center
      cursor pointer
      display: flex
      flex-direction: row
    div> i
      padding: 0 2px 0 0
    div> p
      font-weight: 700
      padding: 0 6px 0 0
    div> p:hover
      color: #f44336
    div> span
      font-size: 17px
      color: #1f2837
      font-style: italic

