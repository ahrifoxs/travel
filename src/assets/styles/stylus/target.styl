  margin-top: 60px

// 以下是targetFooter 页面的样式
.targetFooter
  width: 1170px
  margin: 0 auto
  display: flex
  flex-direction: row
  justify-content center
  padding: 20px 0
  div>h1
    font-size: 36px
    padding: 2px
  div:nth-of-type(1)> ul> li
    height: 20px
    line-height: 20px
  div:nth-of-type(2)> ul
    text-align: center
    margin: 0 auto
    display: flex
    flex-direction: row
    justify-content center
  div:nth-of-type(2)> ul>li
    float left
    
